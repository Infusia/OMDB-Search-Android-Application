<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customLight"
    android:fadingEdge="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/dialogConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill"
        android:background="@color/customLight"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MovieFragment">

        <ImageView
            android:id="@+id/dialogImageView"
            android:layout_width="314dp"
            android:layout_height="260dp"
            android:contentDescription="@string/img"
            android:src="@mipmap/ic_launcher" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialogMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/movie"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/movieTitleFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dialogActorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/actors"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/movieActorFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dialogPlotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/plot"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/movePlotFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialogAddToFavTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/addtofav"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/addToFavouritesButton"
            android:layout_width="284dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/customDark"
            android:paddingTop="10dp"
            android:text="@string/fav"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>
